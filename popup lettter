        }

        .letter-container {
            position: relative;
            width: 100%;
            max-width: 800px;
            padding: 20px;
        }

        .letter-button {
            background-color: #d4a373;
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .letter-button:hover {
            background-color: #bc8a5f;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .letter {
            position: fixed;
            top: 50%;
